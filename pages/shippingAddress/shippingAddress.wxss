/* pages/shippingAddress/shippingAddress.wxss */
page,.pages{
    width: 100%;
    height: 100%;
    position: relative;
}
.addressMain{
    width: 100%;
    height: 100%;
    background: #ebebeb;
    padding-bottom: 90rpx;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}
.addressList{
    width: 100%;
    height: 116rpx;
    background: #fff;
    padding: 0 30rpx;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}
.addressType{
    margin-left: 20rpx;
}
.typeTop{
    font-size: 28rpx;
    color: #313131;
}
.typeBtm{
    font-size: 22rpx;
    color: #959595;
}
.typeRedact{
    width: 42rpx;
}
/* 新增地址 */
.addSite{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    background: #fff;
}
.addIcon{
    width: 42rpx;    
}
.addTxt{
    font-size: 30rpx;
    color: #535353;
    padding-left: 20rpx;
}