    </navigator> -->
    <view bindtap='chooseAddress' url='../newShippingAddress/newShippingAddress' class='addSite flex vc hc'>
        <image class='addIcon' mode='widthFix' src='../../images/addSite.png'></image>
        <view class='addTxt'>新增收货地址</view>
